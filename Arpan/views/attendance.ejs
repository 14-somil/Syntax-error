<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance</title>
</head>
<body>
    <form action="/backbench/attendance" method="POST">
    <input type="date" name="date">
    <table>
        <tr>
            <th>Name</th>
            <th>Attendance</th>
        </tr>
    <% Array.forEach(function(student){ %> 
        <tr>
        <td><%=student.username%></td> <td><input type="checkbox" name="<%student.username%>" value="<%student.username%>"></td>
        </tr>
    <% }) %> 
    </table>

    <button>Submit</button>
    </form>
</body>
</html>